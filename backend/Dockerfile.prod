# Production Dockerfile for Django Backend
# Multi-stage build for optimization and security

# ========================================
# ðŸ—ï¸ Build Stage
# ========================================
FROM python:3.12-slim as builder

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies for building
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        gcc \
        libpq-dev \
        postgresql-client \
        curl \
        && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install -r requirements.txt

# ========================================
# ðŸš€ Production Stage
# ========================================
FROM python:3.12-slim as production

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PATH="/opt/venv/bin:$PATH" \
    DJANGO_SETTINGS_MODULE=new_concierge_backend.settings_prod

# Create non-root user for security
RUN groupadd -r django && useradd -r -g django django

# Install runtime dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        libpq5 \
        postgresql-client \
        curl \
        && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Set working directory
WORKDIR /app

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/logs /app/backups /vol/static /vol/media && \
    chown -R django:django /app /vol

# Copy and set permissions for entrypoint script
COPY entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

# Install Gunicorn for production
RUN pip install gunicorn

# Create Gunicorn configuration
RUN echo 'import multiprocessing\n\
bind = "0.0.0.0:8000"\n\
workers = multiprocessing.cpu_count() * 2 + 1\n\
worker_class = "sync"\n\
worker_connections = 1000\n\
max_requests = 1000\n\
max_requests_jitter = 50\n\
timeout = 30\n\
keepalive = 2\n\
preload_app = True\n\
accesslog = "/app/logs/gunicorn_access.log"\n\
errorlog = "/app/logs/gunicorn_error.log"\n\
loglevel = "info"\n\
capture_output = True\n\
enable_stdio_inheritance = True' > /app/gunicorn.conf.py

# Switch to non-root user
USER django

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/api/health/ || exit 1

# Expose port
EXPOSE 8000

# Default command
CMD ["gunicorn", "--config", "/app/gunicorn.conf.py", "new_concierge_backend.wsgi:application"] 