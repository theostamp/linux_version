###############################################################################
# 📦  PostgreSQL (service db)
###############################################################################
POSTGRES_DB=new_concierge_db          # όνομα βασικής DB (public schema)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db                      # service-name μέσα στο compose network
POSTGRES_PORT=5432

###############################################################################
# 🐍  Django — βασικά
###############################################################################
DJANGO_SECRET_KEY=CHANGE-ME-PLEASE-!  # φτιάξε έναν τυχαίο 50-char
DJANGO_DEBUG=True                     # False σε production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ENV=development                       # ή production

###############################################################################
# 🏠  django-tenants (πρώτος tenant για τοπικό dev)
###############################################################################
INITIAL_TENANT_SCHEMA=tenant1
INITIAL_TENANT_DOMAIN=tenant1.localhost
PUBLIC_DOMAIN=localhost

###############################################################################
# 👑  Django superuser (auto-create απ’ το entrypoint.sh)
###############################################################################
DJANGO_SUPERUSER_EMAIL=theostam1966@gmail.com
DJANGO_SUPERUSER_FIRST_NAME=theo
DJANGO_SUPERUSER_LAST_NAME=theo


###############################################################################
# 📂  Static / Media (ίδια paths με volumes & settings.py)
###############################################################################
STATIC_ROOT=/vol/static
MEDIA_ROOT=/vol/media

###############################################################################
# 🌐  CORS / CSRF
